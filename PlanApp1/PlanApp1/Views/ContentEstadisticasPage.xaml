<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanApp1.Views.ContentEstadisticasPage">
    <ContentPage.Content>
        
        <StackLayout Spacing="20">
            <Label Text="Estadisticas"
                VerticalOptions="Start" 
                HorizontalOptions="Center" />

            <Button Text="Reporte Curso"
                    FontSize="Medium"
                    TextColor="White"
                    BackgroundColor="DarkBlue"
                    Clicked="OpenBrowser_OnClicked"/>

            <Button Text="Reporte Docente"
                    FontSize="Medium"
                    TextColor="White"
                    BackgroundColor="DarkBlue"
                    Clicked="OpenBrowser1_OnClicked"/>

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>